<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSourceMySQL" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://qaextr01.bidsync.com:3306/db_bidsync?autoReconnect=true" />
        <property name="username" value="agent" />
        <property name="password" value="bidsync:1" />
        <property name="initialSize" value="2" />
        <property name="maxActive" value="5" />
        <property name="validationQuery" value="Select 1" />
    </bean>

    <bean id="dataSourceOracle" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@afdevdb01.bidsync.com:1521:afdevdb" />
        <property name="username" value="dpx" />
        <property name="password" value="dpxp2ss" />
        <property name="initialSize" value="2" />
        <property name="maxActive" value="5" />
        <property name="validationQuery" value="Select 1 from dual"/>
        <property name="maxIdle" value="2"/>
        <property name="maxWait" value="1000"/>
        <property name="removeAbandoned" value="true"/>
        <property name="logAbandoned" value="true"/>
        <property name="removeAbandonedTimeout" value="60"/>
    </bean>

    <bean id="reportsDPXDAO" class="com.bidsync.extractor.bidreports.db.JdbcReportsDPXDAO">
        <property name="dataSource" ref="dataSourceOracle" />
    </bean>
    <bean id="reportsMySQLDAO" class="com.bidsync.extractor.bidreports.db.JdbcReportsMySQLDAO">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

	<bean id="releaseDPXDAO" class="com.bidsync.extractor.release.db.JdbcReleaseDPXDAO">
		<property name="dataSource" ref="dataSourceOracle" />
	</bean>
	<bean id="releaseDAO" class="com.bidsync.extractor.release.db.JdbcReleaseDAO">
		<property name="dataSource" ref="dataSourceMySQL" />
	</bean>

    <bean id="classificationDPXDAO" class="com.bidsync.extractor.classifier.db.JdbcClassificationDPXDAO">
        <property name="dataSource" ref="dataSourceOracle" />
    </bean>
    <bean id="classificationEngineDAO" class="com.bidsync.extractor.classifier.db.JdbcClassificationEngineDAO">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

    <bean id="prodExtractorEngineDao" class="com.bidsync.extractor.extractorengine.db.ProdJdbcExtractorEngineDao">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

    <bean id="extractorEngineDao" class="com.bidsync.extractor.extractorengine.db.JdbcExtractorEngineDao">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

    <bean id="extractorEngine" class="com.bidsync.extractor.extractorengine.main.ExtractorEngine">
        <property name="extractorEngineDao" ref="extractorEngineDao" />
        <property name="precision" value="0.85"/>
    </bean>

    <bean id="FBODAO" class="com.bidsync.extractor.federal.db.JdbcFBODAO">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

    <bean id="FBODPXDAO" class="com.bidsync.extractor.federal.db.JdbcFBODPXDAO">
        <property name="dataSource" ref="dataSourceOracle" />
    </bean>

    <bean id="FederalExtractor"
          class="com.bidsync.extractor.federal.main.FederalExtractor">
        <property name="dao" ref="FBODAO" />
        <property name="dpxdao" ref="FBODPXDAO" />
    </bean>

    <bean id="urldiscoveryDao" class="com.bidsync.extractor.urldiscovery.db.JdbcURLDiscoveryDao">
        <property name="dataSource" ref="dataSourceMySQL" />
    </bean>

    <bean id="legacyOracleDao" class="com.bidsync.extractor.urldiscovery.db.jdbcLegacyOracleDao">
        <property name="dataSource" ref="dataSourceOracle" />
        <property name="urlDiscoveryDao" ref="urldiscoveryDao"/>
    </bean>

    <bean id="gmailURLExtractor" class="com.bidsync.extractor.urldiscovery.utils.mail.GmailURLExtractor">
        <property name="urldiscoveryDao" ref="urldiscoveryDao" />
        <property name="username" value="BidSyncAgent1@gmail.com" />
        <property name="password" value="BidSync:1" />
        <property name="popservername" value="pop.gmail.com" />
        <property name="category" value="Construction" />
        <property name="accountname" value="Constructions" />
    </bean>

    <bean id="oracleDao" class="com.bidsync.extractor.p2pmail.db.JdbcProdp2pDAO">
        <property name="dataSource" ref="dataSourceOracle" />
    </bean>

    <bean id="emailAgent" class="com.bidsync.extractor.p2pmail.email.EmailAgent">
        <property name="oracleDao" ref="oracleDao" />
        <!--  configurable Gmail account -->
        <property name="username" value="bidsyncp2ptrain@gmail.com" />
        <!--
        <property name="username" value="BidSyncp2p@gmail.com" />
         -->
        <property name="password" value="BidSync:1" />
        <property name="popservername" value="pop.gmail.com" />
        <!--  -->
        <property name="smtpservername" value="prodmail01.bidsync.com" />
        <property name="replyEmailAddress" value="notices@bidsync.com" />
        <!--  configurable rules here -->
        <property name="usDomain" value="tus.bidsync.com" />
        <property name="suDomain" value="tsu.bidsync.com" />
        <property name="coDomain" value="tco.bidsync.com" />
    </bean>

    <bean id="emailService" class="com.bidsync.extractor.util.EmailService">
        <property name="host" value="prodmail01.bidsync.com" />
        <property name="from" value="sreynolds@bidsync.com" />
        <property name="to" value="sreynolds@bidsync.com" />
    </bean>
</beans>
